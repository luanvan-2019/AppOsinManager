<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_avatar"
            android:src="@drawable/ic_account_icon_blue"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_name"
                android:textColor="@color/enable"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Nguyễn Văn Tèo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_type"
                android:textSize="16sp"
                android:text="Nhân viên đa năng"
                android:layout_below="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_phone"
                android:textSize="16sp"
                android:text="0921895314"
                android:layout_below="@+id/txt_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/txt_mnv"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="MNV: 20"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#EAF5FF"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</LinearLayout>