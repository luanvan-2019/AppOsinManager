<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_margin="10dp"
        android:gravity="center"
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/avatar_account"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_account_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/slogan_coosin"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textSize="25sp"
                android:text="QUẢN LÝ"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/top_bar"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_ql_nhanvien"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="12dp"
                    >

                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/ic_quanly_nhanvien"
                            android:layout_width="60dp"
                            android:layout_height="60dp"/>
                        <TextView
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="#FF258BCF"
                            android:layout_marginTop="8dp"
                            android:text="Quản lý\nnhân viên"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_ql_lich"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="12dp"
                    >

                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:padding="10dp"
                            android:src="@drawable/ic_calendar_1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"/>
                        <TextView
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="#FF258BCF"
                            android:layout_marginTop="8dp"
                            android:text="Quản lý\nlịch làm việc"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_ql_thongke"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="12dp"
                    >

                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/ic_thongke"
                            android:layout_width="60dp"
                            android:layout_height="60dp"/>
                        <TextView
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="#FF258BCF"
                            android:layout_marginTop="8dp"
                            android:text="Thống kê"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_ql_gia"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="12dp"
                    >

                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/ic_coin"
                            android:layout_width="60dp"
                            android:layout_height="60dp"/>
                        <TextView
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="#278DCB"
                            android:layout_marginTop="8dp"
                            android:text="Quản lý giá"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_quangcao"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="12dp"
                    >

                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/ic_advertise"
                            android:layout_width="60dp"
                            android:layout_height="60dp"/>
                        <TextView
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="#FF258BCF"
                            android:layout_marginTop="8dp"
                            android:text="Quản lý\nquãng cáo"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="12dp"
                    >

                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/ic_contact"
                            android:layout_width="60dp"
                            android:layout_height="60dp"/>
                        <TextView
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="#278DCB"
                            android:layout_marginTop="8dp"
                            android:text="Chăm sóc\nkhách hàng"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>



            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager_image"
                android:layout_width="match_parent"
                android:layout_height="130dp">
            </androidx.viewpager.widget.ViewPager>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="12dp">
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>